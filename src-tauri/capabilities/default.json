{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "os:default",
    "fs:scope-download-recursive",
    "fs:allow-download-write-recursive",
     "fs:scope-home-recursive",
     "fs:allow-home-write-recursive",
     "fs:allow-write",
     "fs:allow-exists",
     "shell:allow-execute",
     {
      "identifier": "shell:allow-execute",
      "allow": [{
         "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ] 
         },{
          "name": "sudo",
           "cmd": "sudo",
           "args": [
             {
               "validator": ".+"
             }
           ] 
          }]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [{
         "name": "osascript",
          "cmd": "osascript",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ] 
         }]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ] 
        }
      ]
    },
     {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$DOWNLOAD/*" }]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "/etc/hosts" }]
    }
     
    
  ]
}